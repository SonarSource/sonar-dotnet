<?xml version="1.0" encoding="utf-8"?>
<Project>
  <Import Project="$(MSBuildThisFileDirectory)\..\Common.targets" />

  <PropertyGroup>
    <!-- NuGet.Protocol (used by TestFramework) requires NuGet.Frameworks at runtime,
         which conflicts with Microsoft.Build.Locator's MSBL001 check.
         The MSBL001 warning is about potential assembly loading issues when MSBuildLocator
         registers MSBuild assemblies, but NuGet.Frameworks is not an MSBuild assembly
         and is safe to include at runtime. -->
    <DisableMSBuildAssemblyCopyCheck>true</DisableMSBuildAssemblyCopyCheck>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="altcover" Version="9.0.102" />
    <PackageReference Include="Microsoft.NET.Test.Sdk" Version="18.0.1" />
    <PackageReference Include="MSTest.TestAdapter" Version="4.1.0" />
    <PackageReference Include="MSTest.TestFramework" Version="4.1.0" />
  </ItemGroup>

  <!-- Explicit reference to ensure consistent lock files across platforms (Linux/Windows).
       On Linux, this package is implicitly added for net48 targets, but not on Windows.
       See: https://github.com/NuGet/Home/issues/9195 -->
  <ItemGroup Condition="'$(TargetFramework)' == 'net48'">
    <PackageReference Include="Microsoft.NETFramework.ReferenceAssemblies" Version="1.0.3" PrivateAssets="All" />
  </ItemGroup>
</Project>
